<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".roomDB.AddUserFragment"
    android:background="@drawable/background_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/data"
        android:fontFamily="cursive"
        android:textSize="@dimen/_30sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginTop="@dimen/_200dp"
            android:id="@+id/userIdEditText"
            android:hint="@string/enter_user_id"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_10dp"
            app:drawableStartCompat="@drawable/baseline_person_search_24"
            android:inputType="number"
            android:autofillHints="none"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_250dp"
            android:layout_height="@dimen/_50dp"
            android:id="@+id/usernameEditText"
            android:hint="@string/enter_username"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_10dp"
            app:drawableStartCompat="@drawable/baseline_person_24"
            android:inputType="textPersonName"
            android:autofillHints="username"/>


        <EditText
            android:layout_marginTop="@dimen/_300dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:id="@+id/emailEditText"
            android:hint="@string/enter_your_mail_address"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_10dp"
            app:drawableStartCompat="@drawable/email"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:text="@string/save"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_400dp"
            android:layout_gravity="end"
            android:textSize="@dimen/_14sp"
            android:backgroundTint="@color/buttonbg"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnClear"
            android:text="@string/clear"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_400dp"
            android:layout_gravity="start"
            android:textSize="@dimen/_14sp"
            android:backgroundTint="@color/buttonbg"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:text="@string/go_back"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_400dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_14sp"
            android:backgroundTint="@color/buttonbg"/>

    </FrameLayout>
</ScrollView>