<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.gridView.GridViewActivity"
    android:background="@drawable/bgcolor">

    <GridView
        android:id="@+id/GVfruits"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:horizontalSpacing="@dimen/_23dp"
        android:numColumns="2"
        android:verticalSpacing="@dimen/_23dp"
        app:layout_constraintBottom_toTopOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goBackOnClick"
        android:text="@string/go_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GVfruits"
        android:layout_marginTop="@dimen/_16dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
