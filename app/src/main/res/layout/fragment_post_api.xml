<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PostApiFragment"
    android:background="@drawable/background_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/pink"
        android:text="@string/post_api_and_threads"
        android:textSize="@dimen/_30sp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_20dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"/>


    <EditText
        android:layout_width="@dimen/_300dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginTop="@dimen/_50dp"
        android:layout_marginStart="@dimen/_50dp"
        android:inputType="textPersonName"
        android:hint="@string/enter_username"
        android:autofillHints="username"
        android:id="@+id/name"
        android:cursorVisible="true"
        android:autoSizeMaxTextSize="@dimen/_14sp"/>
    <EditText
        android:layout_width="@dimen/_300dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginStart="@dimen/_50dp"
        android:layout_marginTop="@dimen/_30dp"
        android:inputType="textEmailAddress"
        android:hint="@string/enter_your_mail_address"
        android:autofillHints="emailAddress"
        android:id="@+id/email"
        android:autoSizeMaxTextSize="@dimen/_14sp"/>


    <Button
        android:id="@+id/btn_sendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_data"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30dp"
        android:backgroundTint="@color/buttonbg3"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="@dimen/_300dp"
        android:layout_height="@dimen/_150dp"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/_50dp"
        android:layout_marginTop="@dimen/_20dp"
        android:id="@+id/viewData"
        android:visibility="gone"
        android:text="@string/data_received_is"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/black"
        android:fontFamily="serif"/>

    <ProgressBar
        android:id="@+id/loadingPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />


</LinearLayout>