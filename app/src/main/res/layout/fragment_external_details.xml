<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor4"
    tools:context=".storage.appSpecificStorage.ExternalDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/externalstorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/external_storage"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sp" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginTop="@dimen/_90dp"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/click_buttons_for_data"
            android:minHeight="@dimen/_48dp"
            android:textColor="#40C4FF"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/internalCache"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_90dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:backgroundTint="@color/buttonbg2"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/internal_cache"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/externalCache"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_90dp"
                android:layout_marginStart="@dimen/_8dp"
                android:backgroundTint="@color/buttonbg2"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/external_cache"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                tools:ignore="ButtonStyle"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/externalPublic"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_90dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:backgroundTint="@color/buttonbg2"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/external_public"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/externalPrivate"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_90dp"
                android:layout_marginStart="@dimen/_8dp"
                android:backgroundTint="@color/buttonbg2"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/external_private"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_50dp"
            android:backgroundTint="@color/buttonbg2"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/go_back"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp" />

    </LinearLayout>
</ScrollView>
