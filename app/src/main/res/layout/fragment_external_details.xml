<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExternalDetailsFragment"
    android:background="@color/buttonbg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="@string/external_storage"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="30sp"
        android:background="@color/white"
        android:id="@+id/externalstorage"
        />


    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginTop="90dp"
        android:background="@color/white"
        android:hint="@string/click_the_buttons_to_load_the_data_present_there"
        android:minHeight="48dp"
        android:textColor="#40C4FF"
        android:textColorHint="@color/black"
        android:textSize="@dimen/_14sp" />

    <Button
        android:id="@+id/internalCache"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_90dp"
        android:layout_marginTop="@dimen/_200dp"
        android:backgroundTint="@color/buttonbg2"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/internal_cache"
        android:textColor="#0288D1"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/_30dp"/>

    <Button
        android:id="@+id/externalCache"
        android:layout_width="@dimen/_150dp"
        android:layout_height="90dp"
        android:layout_marginStart="@dimen/_210dp"
        android:layout_marginTop="@dimen/_200dp"
        android:backgroundTint="@color/buttonbg2"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/external_cache"
        android:textColor="#0288D1"
        android:textSize="20sp" />


    <Button
        android:id="@+id/externalPublic"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_90dp"
        android:layout_marginStart="@dimen/_30dp"
        android:layout_marginTop="@dimen/_300dp"
        android:backgroundTint="@color/buttonbg2"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/external_public"
        android:textColor="#0288D1"
        android:textSize="20sp" />
    <Button
        android:id="@+id/externalPrivate"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_90dp"
        android:layout_marginStart="@dimen/_210dp"
        android:layout_marginTop="@dimen/_300dp"
        android:backgroundTint="@color/buttonbg2"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/external_private"
        android:textColor="#0288D1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_400dp"
        android:backgroundTint="@color/buttonbg2"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/go_back"
        android:textColor="#0288D1"
        android:textSize="20sp"
        />

</FrameLayout>