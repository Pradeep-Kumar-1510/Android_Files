<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.MenuActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:title="@string/your_title"
            app:titleTextColor="@color/black" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="@dimen/_20dp"
            android:text="@string/menu_welcome"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t1"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="@dimen/_16dp"
            android:rowCount="3"
            android:rowOrderPreserved="false">

            <Button
                android:id="@+id/storageButton"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_50dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginEnd="@dimen/_15dp"
                android:backgroundTint="@color/buttonbg"
                android:text="@string/view_storage"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnApi"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_50dp"
                android:layout_row="0"
                android:layout_column="1"
                android:backgroundTint="@color/buttonbg"
                android:text="@string/view_api"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/callButton"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_50dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="@dimen/_14sp"
                android:layout_marginTop="@dimen/_15dp"
                android:backgroundTint="@color/buttonbg"
                android:text="@string/calls"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/mapButton"
                android:textSize="@dimen/_14sp"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_50dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginTop="@dimen/_15dp"
                android:backgroundTint="@color/buttonbg"
                android:text="@string/get_directions"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/backButton"
                android:textSize="@dimen/_14sp"
                android:layout_width="@dimen/_150dp"
                android:layout_height="@dimen/_50dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="@dimen/_15dp"
                android:backgroundTint="@color/buttonbg"
                android:text="@string/go_back"
                android:textColor="@color/black" />

        </GridLayout>
    </RelativeLayout>
</ScrollView>
